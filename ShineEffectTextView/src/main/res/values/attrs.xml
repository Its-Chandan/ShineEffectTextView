<resources>
    <declare-styleable name="ShineEffectTextView">
        <attr name="shine_clip_to_children" format="boolean"/>
        <attr name="shine_colored" format="boolean"/>
        <attr name="shine_base_color" format="color"/>
        <attr name="shine_highlight_color" format="color"/>
        <attr name="shine_base_alpha" format="float"/>
        <attr name="shine_highlight_alpha" format="float"/>
        <attr name="shine_auto_start" format="boolean"/>
        <attr name="shine_duration" format="integer"/>
        <attr name="shine_repeat_count" format="integer"/>
        <attr name="shine_repeat_delay" format="integer"/>
        <attr name="shine_repeat_mode" format="enum">
            <enum name="restart" value="1"/>
            <enum name="reverse" value="2"/>
        </attr>
        <attr name="shine_start_delay" format="integer"/>
        <attr name="shine_direction" format="enum">
            <enum name="left_to_right" value="0"/>
            <enum name="top_to_bottom" value="1"/>
            <enum name="right_to_left" value="2"/>
            <enum name="bottom_to_top" value="3"/>
        </attr>
        <attr name="shine_dropoff" format="float"/>
        <attr name="shine_fixed_width" format="dimension"/>
        <attr name="shine_fixed_height" format="dimension"/>
        <attr name="shine_intensity" format="float"/>
        <attr name="shine_width_ratio" format="float"/>
        <attr name="shine_height_ratio" format="float"/>
        <attr name="shine_shape" format="enum">
            <enum name="linear" value="0"/>
            <enum name="radial" value="1"/>
        </attr>
        <attr name="shine_tilt" format="float"/>
    </declare-styleable>
</resources>